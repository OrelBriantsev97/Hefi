<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hefi.Mobile.Pages.SignUpPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Background image -->
        <Image Source="hefibg.png"
           Aspect="AspectFill" />

        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="12" Margin="0,50,0,0">
                <Label Text="Welcome to Hefi"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="White" />

                <Entry x:Name="NameEntry" Placeholder="Full name" FontSize="20"/>
                <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" FontSize="20" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"  FontSize="20"  />
                <Button Text="Create account" Clicked="OnSignUpClicked" Background="#4CA8A1"  FontSize="20" />

                <Label x:Name="ResultLabel"
               TextColor="Tomato" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
