<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hefi.Mobile.Pages.WorkoutsPage"
             Title="Workouts">
    <VerticalStackLayout Padding="16" Spacing="10">
        <Button Text="Add Workout" Clicked="OnAddClicked" />
        <CollectionView x:Name="List">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,6" HasShadow="True">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding PerformedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontAttributes="Bold"/>
                            <Label Text="{Binding WorkoutType, StringFormat='Type: {0}'}"/>
                            <Label Text="{Binding DurationMinutes, StringFormat='Duration: {0} min'}"/>
                            <Label Text="{Binding CaloriesBurned, StringFormat='Calories: {0} kcal'}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
