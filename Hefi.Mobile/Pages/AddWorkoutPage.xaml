<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hefi.Mobile.Pages.AddWorkoutPage"
             Title="Add Workout">
    <VerticalStackLayout Padding="16" Spacing="10">
        <Entry x:Name="TypeEntry" Placeholder="Workout type (e.g., Run)" />
        <Entry x:Name="DurationEntry" Placeholder="Duration (min)" Keyboard="Numeric" />
        <Entry x:Name="KcalEntry" Placeholder="Calories burned" Keyboard="Numeric" />
        <Button Text="Save" Clicked="OnSaveClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
